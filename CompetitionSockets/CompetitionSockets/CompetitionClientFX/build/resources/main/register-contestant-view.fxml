<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: linear-gradient(to bottom, #add8e6, #90ee90);">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
            <children>
                <Label text="Register Contestant" />
                <TextField fx:id="nameTextField" promptText="Name">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="ageTextField" promptText="Age">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="cnpTextField" promptText="CNP">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <Button fx:id="registerButton" onAction="#onRegisterButtonClick" text="Register" />
            </children>
        </VBox>
        <TableView fx:id="contestsTableView" prefHeight="200.0" prefWidth="77.0">
            <columns>
                <TableColumn fx:id="typeColumn" prefWidth="75.0" text="C1" />
            </columns>
        </TableView>
    </children>
</HBox>